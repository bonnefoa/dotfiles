#compdef z

function _z() {
    # Only show completions when the cursor is at the end of the line.
    # shellcheck disable=SC2154
    [[ "${#words[@]}" -eq "${CURRENT}" ]] || return

    local result
    # shellcheck disable=SC2086,SC2312
    if result="$(\command zoxide query --exclude "$(__zoxide_pwd)" -i -- ${words[1,-1]})"; then
        __zoxide_result="${result}"
    else
        __zoxide_result=''
    fi
    # This will trigger the __zoxide_z_complete_helper
    # as the terminal will answer "\e[0n" on which the helper
    # function is bound
    builtin printf '\e[5n'
}
